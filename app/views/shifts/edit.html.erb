<h1>スケジュールの編集</h1>

<div class="card">
  <div class="card-body">
    <%= form_with model: @shift, url: shift_path do |form| %>
      <div class="form-group">
        <%= form.label :start_time %>
        <%= form.datetime_local_field :start_time, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :end_time %>
        <%= form.datetime_local_field :end_time, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :user_id %>
        <%= form.collection_select :user_id, User.all, :id, :name, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= form.submit "更新する", class: "btn btn-primary" %>
        <%= link_to "戻る", shift_path(@shift), class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
