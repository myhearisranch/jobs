<%= form_with model:@user,url: user_path(@user.id), local:true do |f| %>
  <div class="form-group">
    <%= f.label:name %>
    <%= f.text_field :name, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.submit "Update User" , class: "btn-secondary" %>
  </div>
<% end %>
    



